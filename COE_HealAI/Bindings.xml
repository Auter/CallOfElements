<!--

	CALL OF ELEMENTS
	The All-In-One Shaman Addon
	
	by Wyverex (2006)
	
	
	Key Bindings
	
-->

<Bindings>
	<!-- Configuration dialog -->
	<Binding name="COESHOWCONFIG"  header="CALLOFELEMENTS">
		if( COE and COE.Initialized ) then
			COE:ToggleConfigFrame();
		end
	</Binding>

	<!-- ============================================
	     HEALAI KEYBINDINGS (Primary healing system)
	     ============================================ -->
	
	<!-- HealAI: One-button smart healing
	     - Checks for dispellable debuffs first (if enabled)
	     - Then checks Chain Heal conditions
	     - Then heals lowest HP / tank priority target
	     - Uses HealComm, thresholds, smart rank selection
	     - Respects spam mode toggle in settings -->
	<Binding name="COEHEALBRAIN" header="COE_HEALAI">
		if( COE and COE.Initialized and COE_Heal ) then
			COE_Heal:HealBrain();
		end
	</Binding>
	
	<!-- HealAI Dispel: Dedicated dispel-only keybind
	     - Cures Poison or Disease based on settings
	     - Respects HP gate, tank priority, throttle
	     - Does NOT heal, only dispels -->
	<Binding name="COEDISPEL">
		if( COE and COE.Initialized and COE_Heal ) then
			COE_Heal:Dispel();
		end
	</Binding>

	<!-- ============================================
	     LEGACY KEYBINDINGS (kept for compatibility)
	     These call older functions but still work.
	     HealAI is the recommended keybind.
	     ============================================ -->
	
	<!-- Legacy: BestHeal - threshold-based smart healing
	     (Now superseded by HealAI) -->
	<Binding name="COEBESTHEAL">
		if( COE and COE.Initialized and COE_Heal ) then
			COE_Heal:BestHeal();
		end
	</Binding>
	
	<!-- Legacy: BattleHeal - fast heal mode
	     (Now superseded by HealAI emergency logic) -->
	<Binding name="COEBATTLEHEAL">
		if( COE and COE.Initialized and COE_Heal ) then
			COE_Heal:BattleHeal();
		end
	</Binding>

	<!-- Throw suggested totem -->
	<Binding name="COETHROWADVISED">
		if( COE and COE.Initialized and COE_Totem ) then
			COE_Totem:ThrowAdvisedTotem();
		end
	</Binding>

	<!-- Totem sets -->
	<Binding name="COENEXTSET">
		if( COE and COE.Initialized and COE_Totem ) then
			COE_Totem:SwitchToNextSet();
